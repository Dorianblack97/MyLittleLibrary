            LightNovel novel => novel.Title ?? "Unknown Novel",
            _ => "Unknown Item"
        };
    }

    private string GetItemType(object item)
    {
        return item switch
        {
            Manga => "Manga",
            LightNovel => "Light Novel",
            _ => "Film"
        };
    }

    private Color GetItemTypeColor(object item)
    {
        return item switch
        {
            Manga => Color.Secondary,
            LightNovel => Color.Tertiary,
            _ => Color.Primary
        };
    }
