@page "/"
@using MyLittleLibrary.Domain
@using MyLittleLibrary.Infrastructure
@inject MangaRepository MangaRepository
@inject LightNovelRepository LightNovelRepository
@inject IJSRuntime JSRuntime

<PageTitle>MyLittleLibrary - Your Digital Media Collection</PageTitle>

@* Hero Section *@
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-6">
    <MudPaper Elevation="3" Class="pa-8 mb-6" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
        <MudGrid AlignItems="Center">
            <MudItem xs="12" md="8">
                <MudText Typo="Typo.h2" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.LocalLibrary" Size="Size.Large" Class="mr-3" />
                    Welcome to MyLittleLibrary
                </MudText>
                <MudText Typo="Typo.h5" Class="mb-4" Style="opacity: 0.9;">
                    Your Personal Digital Media Collection Hub
                </MudText>
                <MudText Typo="Typo.body1" Style="opacity: 0.8;">
                    Organize, track, and discover your favorite films, manga, and light novels all in one place.
                </MudText>
            </MudItem>
            <MudItem xs="12" md="4" Class="text-center">
                <MudIcon Icon="@Icons.Material.Filled.Collections" Size="Size.Large" Style="font-size: 120px; opacity: 0.7;" />
            </MudItem>
        </MudGrid>
    </MudPaper>

    @* Quick Search Section *@
    <MudPaper Elevation="2" Class="pa-4 mb-6">
        <MudGrid AlignItems="Center">
            <MudItem xs="12" md="8">
                <MudTextField @bind-Value="searchQuery" 
                             Placeholder="Search your collection..." 
                             Adornment="Adornment.Start" 
                             AdornmentIcon="@Icons.Material.Filled.Search"
                             FullWidth="true"
                             Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" md="4">
                <MudButton Variant="Variant.Filled" 
                          Color="Color.Primary" 
                          FullWidth="true"
                          StartIcon="@Icons.Material.Filled.Search"
                          OnClick="PerformSearch">
                    Search Collection
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @* Statistics Cards *@
    <MudGrid Class="mb-6">
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="4" Class="pa-4 text-center" Style="height: 200px;">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Movie" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                    <MudText Typo="Typo.h4" Color="Color.Primary">@filmCount</MudText>
                    <MudText Typo="Typo.body2">Films</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="4" Class="pa-4 text-center" Style="height: 200px;">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.MenuBook" Color="Color.Secondary" Size="Size.Large" Class="mb-2" />
                    <MudText Typo="Typo.h4" Color="Color.Secondary">@mangaCount</MudText>
                    <MudText Typo="Typo.body2">Manga</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="4" Class="pa-4 text-center" Style="height: 200px;">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.AutoStories" Color="Color.Tertiary" Size="Size.Large" Class="mb-2" />
                    <MudText Typo="Typo.h4" Color="Color.Tertiary">@lightNovelCount</MudText>
                    <MudText Typo="Typo.body2">Light Novels</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="4" Class="pa-4 text-center" Style="height: 200px;">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.CollectionsBookmark" Color="Color.Success" Size="Size.Large" Class="mb-2" />
                    <MudText Typo="Typo.h4" Color="Color.Success">@totalCount</MudText>
                    <MudText Typo="Typo.body2">Total Items</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    @* Quick Actions Section *@
    <MudText Typo="Typo.h4" Class="mb-4">Quick Actions</MudText>
    <MudGrid Class="mb-6">
        <MudItem xs="12" md="4">
            <MudCard Elevation="3" Class="d-flex flex-column" Style="height: 240px;">
                <MudCardContent Class="flex-grow-1 text-center pa-4">
                    <MudIcon Icon="@Icons.Material.Filled.Movie" Color="Color.Primary" Size="Size.Large" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Films</MudText>
                    <MudText Typo="Typo.body2">Browse and manage your film collection</MudText>
                </MudCardContent>
                <MudCardActions Class="justify-center pa-3">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/film" StartIcon="@Icons.Material.Filled.Visibility">
                        View Films
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="3" Class="d-flex flex-column" Style="height: 240px;">
                <MudCardContent Class="flex-grow-1 text-center pa-4">
                    <MudIcon Icon="@Icons.Material.Filled.MenuBook" Color="Color.Secondary" Size="Size.Large" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Manga</MudText>
                    <MudText Typo="Typo.body2">Explore your manga series and chapters</MudText>
                </MudCardContent>
                <MudCardActions Class="justify-center pa-3">
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="/manga" StartIcon="@Icons.Material.Filled.Visibility">
                        View Manga
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="3" Class="d-flex flex-column" Style="height: 240px;">
                <MudCardContent Class="flex-grow-1 text-center pa-4">
                    <MudIcon Icon="@Icons.Material.Filled.AutoStories" Color="Color.Tertiary" Size="Size.Large" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2">Light Novels</MudText>
                    <MudText Typo="Typo.body2">Discover your light novel collection</MudText>
                </MudCardContent>
                <MudCardActions Class="justify-center pa-3">
                    <MudButton Variant="Variant.Filled" Color="Color.Tertiary" Href="/lightnovel" StartIcon="@Icons.Material.Filled.Visibility">
                        View Novels
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>

    @* Recently Added Section *@
    <MudText Typo="Typo.h4" Class="mb-4">Recently Added</MudText>
    <MudGrid Class="mb-6">
        @if (recentItems?.Any() == true)
        {
            @foreach (var item in recentItems.Take(4))
            {
                <MudItem xs="12" sm="6" md="3">
                    <MudCard Elevation="2" Style="height: 250px;">
                        <MudCardMedia Image="@GetItemImage(item)" Height="150" />
                        <MudCardContent>
                            <MudText Typo="Typo.subtitle1" Class="mb-1">@GetItemTitle(item)</MudText>
                            <MudChip T="string" Color="@GetItemTypeColor(item)" Size="Size.Small">@GetItemType(item)</MudChip>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        }
        else
        {
            <MudItem xs="12">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    <MudText>No items in your collection yet. Start by adding some films, manga, or light novels!</MudText>
                </MudAlert>
            </MudItem>
        }
    </MudGrid>

    @* Add New Content Section *@
    <MudPaper Elevation="2" Class="pa-6">
        <MudText Typo="Typo.h5" Class="mb-4 text-center">Add New Content</MudText>
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" sm="4" md="3">
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Primary" 
                          FullWidth="true"
                          StartIcon="@Icons.Material.Filled.Add"
                          Size="Size.Large"
                          Class="pa-4">
                    Add Film
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="4" md="3">
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Secondary" 
                          FullWidth="true"
                          StartIcon="@Icons.Material.Filled.Add"
                          Size="Size.Large"
                          Class="pa-4">
                    Add Manga
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="4" md="3">
                <MudButton Variant="Variant.Outlined" 
                          Color="Color.Tertiary" 
                          FullWidth="true"
                          StartIcon="@Icons.Material.Filled.Add"
                          Size="Size.Large"
                          Class="pa-4">
                    Add Light Novel
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>

